function ScarabAttack()
	local Count = 0
	Player_GetSquads(g_Player1)
	local bpTable = Util_MakeBlueprintTable("chaos_squad_hell_talon", "dark_eldar_squad_raven", "eldar_squad_nightwing", "guard_squad_marauder", 
	"necron_scarab_squad", "necron_builder_scarab_squad", "necron_builder_scarab_squad_advance_sp", "ork_squad_fighta_bomba", "space_marine_squad_tempest", "tau_barracuda_squad", "sisters_squad_lightning")
	
	local FindAir = function( sgroupid, itemindex, squadID )
		g_TempSquadCounter_ScarabAttack = g_TempSquadCounter_ScarabAttack + 1
		SGroup_Create("temp"..g_TempSquadCounter_ScarabAttack)
		SGroup_Add("temp"..g_TempSquadCounter_ScarabAttack, SGroup_GetSpawnedSquadAt(sgroupid,itemindex))
		local flag = SGroup_ContainsBlueprints("temp"..g_TempSquadCounter_ScarabAttack,bpTable,false)
		if flag == true then
			g_AirTargetCounter = g_AirTargetCounter + 1
			SGroup_CreateIfNotFound("sg_AirTarget"..g_AirTargetCounter)
			SGroup_AddGroup("sg_AirTarget"..g_AirTargetCounter, "temp"..g_TempSquadCounter_ScarabAttack)
			return true
		else
			return false
		end
    end
	
	
	SGroup_ForEach( SGroup_FromName("__Player1000Squads"), FindAir )
	if SGroup_Exists("sg_AirTarget"..g_AirTargetCounter) and SGroup_Count("sg_AirTarget"..g_AirTargetCounter) > 0 then
		-- check if we have pop for scarabs, spawn it, and tell ALL other scarabs to take out this plane
		for i=1,g_ScarabAttackNumber do
			if EGroup_Exists("eg_BottomBase") and EGroup_Count("eg_BottomBase") > 0 then
				Monolith = "eg_BottomBase"
			elseif EGroup_Exists("eg_TopBase") and EGroup_Count("eg_TopBase") > 0 then
				Monolith = "eg_TopBase"
			elseif EGroup_Exists("eg_LeftBase") and EGroup_Count("eg_LeftBase") > 0 then
				Monolith = "eg_LeftBase"
			elseif EGroup_Exists("eg_RightBase") and EGroup_Count("eg_RightBase") > 0 then
				Monolith = "eg_RightBase"
			end
			if PopCheck(g_ScarabCounter, "sg_AttackScarab", g_MaxScarab) then
				Util_CreateSquadsAtPositionEx(g_Player3, "sg_AttackScarab"..g_ScarabCounter, "necron_scarab_squad", EGroup_GetPosition(Monolith), 1,World_GetRand(10,14))
