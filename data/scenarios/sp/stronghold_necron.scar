			end
		end
	end	
	
	for i=1,2 do
		if SGroup_Exists("sg_CenterDefenseLordDestroyer"..i) and SGroup_Count("sg_CenterDefenseLordDestroyer"..i) == 0 then
			Count = Count + 1
		end
	end	
	if Count == 2 then
		Rule_Remove(UseLordDestroyerSkill)
	end
end

