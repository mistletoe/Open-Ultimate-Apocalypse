	Cpu_Enable(g_Player5, false)
	Cpu_SetDifficulty(g_Player5, AD_Standard)
	Cpu_Enable(g_Player6, false)
	Cpu_SetDifficulty(g_Player6, AD_Standard)
	Cpu_Enable(g_Player7, false)
	Cpu_SetDifficulty(g_Player7, AD_Standard)
