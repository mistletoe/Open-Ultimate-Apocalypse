function Rule_Upgrade_Halt()

	if EGroup_IsCapturedByPlayer("eg_NorthCriticalPoint", g_Player1, false) and EGroup_Exists("eg_TopBase") and EGroup_Count("eg_TopBase") > 0 then
		g_PauseNTimer = true
	else
		g_PauseNTimer = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_SouthCriticalPoint", g_Player1, false) and EGroup_Exists("eg_BottomBase") and EGroup_Count("eg_BottomBase") > 0 then
		g_PauseSTimer = true
	else
		g_PauseSTimer = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_EastCriticalPoint", g_Player1, false) and EGroup_Exists("eg_RightBase") and EGroup_Count("eg_RightBase") > 0 then
		g_PauseETimer = true
	else
		g_PauseETimer = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_WestCriticalPoint", g_Player1, false) and EGroup_Exists("eg_LeftBase") and EGroup_Count("eg_LeftBase") > 0 then
		g_PauseWTimer = true
	else
		g_PauseWTimer = false
	end
	
	
	-- added all this stuff to fix a bug
	if EGroup_IsCapturedByPlayer("eg_NorthCriticalPoint", g_Player1, false) then
		g_CritPointObjN = true
	else
		g_CritPointObjN = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_SouthCriticalPoint", g_Player1, false) then
		g_CritPointObjS = true
	else
		g_CritPointObjS = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_EastCriticalPoint", g_Player1, false) then
		g_CritPointObjE = true
	else
		g_CritPointObjE = false
	end
	
	if EGroup_IsCapturedByPlayer("eg_WestCriticalPoint", g_Player1, false) then
		g_CritPointObjW = true
	else
		g_CritPointObjW = false
	end
	
	-- if the objective exists and
	if Objective_Exists(Objective_SubCritPoints.title_id) then
		if Objective_GetState(Objective_SubCritPoints.title_id) == OS_Incomplete then
			if g_CritPointObjN == true and g_CritPointObjS == true and g_CritPointObjE == true and g_CritPointObjW == true then
				Objective_SetState(Objective_SubCritPoints.title_id,OS_Complete)
			end
		else
			if g_CritPointObjN == true and g_CritPointObjS == true and g_CritPointObjE == true and g_CritPointObjW == true and Objective_GetState(Objective_SubCritPoints.title_id) == OS_Failed then
				Objective_SetState(Objective_SubCritPoints.title_id,OS_Complete)
			elseif (g_CritPointObjN == false or g_CritPointObjS == false or g_CritPointObjE == false or g_CritPointObjW == false) and Objective_GetState(Objective_SubCritPoints.title_id) == OS_Complete then
				Objective_SetState(Objective_SubCritPoints.title_id,OS_Failed)
			end
		end
	end
	
end

