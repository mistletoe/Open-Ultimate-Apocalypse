	if g_Faith >= g_AmtOfFaithRequiredForCrusade and PopCheck(g_ConfessorCounter, "sg_Confessor", g_MaxConfessor) and EGroup_Exists("eg_MainBaseHQ") and EGroup_Count("eg_MainBaseHQ") > 0 and g_TotalPickupPoints > 0 then
