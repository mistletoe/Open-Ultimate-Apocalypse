function SpawnDaemonsAtShrines()
	
	if g_TotalShrines >= 1 then
		
		local SpawnPoint = t_Shrines[ World_GetRand(1, g_TotalShrines ) ]	
		local Chance = 1
		if g_ShrineTier == 1 then
