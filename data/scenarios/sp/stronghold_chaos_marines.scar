		elseif g_BaseAttackTier == 5 then
			AmountSpawned = 5
		elseif g_BaseAttackTier == 6 then
			AmountSpawned = 5
		end
	end
	
	for i=1, AmountSpawned do
		local Chance = 0
		if i== 1 then
			Chance = World_GetRand(1,6)
		elseif i==2 then
			Chance = World_GetRand(1,6)
		elseif i==3 then
			Chance = World_GetRand(1,7)
