		t_ShrineIE[1] = true
		Util_StartIntel(EVENTS.IE_Shrine_FourthKill)
	elseif g_TotalShrines == 0 and t_ShrineIE[3] == false then
		t_ShrineIE[3] = true
		Util_StartIntel(EVENTS.IE_Shrine_FifthKill)
		Rule_Remove(ShrineIEs)
	end
end

