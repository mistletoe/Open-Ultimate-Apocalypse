class 'DigestPoolTactic' (BaseTactic)

function DigestPoolTactic:__init( base_ai ) super( base_ai )

	self:SetName("Tyranids Digest Pool Tactic")
	
	-- Building is a bunker
	self:AddToBunkerList()
end

function DigestPoolTactic:DoAbilities()
	-- Always try to release bunkered rippers, for now
	if self.m_bBunker and self.base_ai:CanUnload() then
		self.base_ai:DoUnload()
	end
end