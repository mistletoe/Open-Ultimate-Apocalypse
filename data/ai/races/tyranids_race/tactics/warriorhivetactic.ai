class 'WarriorHiveTactic' (BaseTactic)

function WarriorHiveTactic:__init( base_ai ) super( base_ai )

	self:SetName("Warrior Hive Tactic")
	
	-- Building is a bunker
	-- self:AddToBunkerList()
end


function WarriorHiveTactic:DoAbilities()
	-- Always try to release loaded raveners, at Tier 1 to speed up capturing
	if cpu_manager:GetTierLevel() == 1 then
		self:DeepStrikeImmediately()
	end
end


function WarriorHiveTactic:DeepStrikeImmediately()
	local buildChannelHQ = build_manager:GetBuildChannelFromID(self.base_ai:GetEntity():GetID())
	if buildChannelHQ ~= nil then
		local id = buildChannelHQ:GetBlueprintID()
		if (buildChannelHQ:CanDeepStrike() and cpu_manager:MilitaryDeepStrike(id)) then
			buildChannelHQ:DoDeepStrikeToPos(self.base_ai:GetPosition())
		end
	end
end
