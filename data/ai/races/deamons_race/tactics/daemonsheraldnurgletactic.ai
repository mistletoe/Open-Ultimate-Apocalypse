function DaemonsHeraldNurgleTactic:Update()

	if (self:IsComplete()) then
		return
	end
	
	-- State machine
	if (not InfantryTactic.Update( self )) then
		return
	end
	
	-- Attach to squad
	self:TryAttachSquad( true, false, 500, 100, nil )
	
	-- Check if we are in serious trouble
	self:EmergencyRetreat()
end
 