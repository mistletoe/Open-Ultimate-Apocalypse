class 'GUOTactic' (ChaosMarineInfantryTactic)

GUO = {}

function GUOTactic:__init( squad_ai ) super( squad_ai )

	self:SetName("GUO Tactic")
end

function GUOTactic:AutoBuildAddOn( addonSlot )
	for e in self.squad_ai:GetEntities() do
		local buildChannelGUO = build_manager:GetBuildChannelFromID(e:GetID())
		if (buildChannelGUO ~= nil) then
			local addOnID = buildChannelGUO:GetItemIDAt(BuildChannelAI.PQ_AddOn, addonSlot)
			if (buildChannelGUO:IsBuilding() == 0 and buildChannelGUO:CanAddToQueue(BuildChannelAI.PQ_AddOn, addOnID) == BuildChannelAI.CANBUILD_Ok) then
				buildChannelGUO:BuildAddOn(addOnID)
				return
			end
		end
	end
	return
end

function GUOTactic:AlwaysAttack()
	return true
end

function GUOTactic:InitAbilities()

	-- Init ability ID's
	if (GUO.Puke_id == nil) then
		GUO.Puke_id = cpu_manager.stats:GetAbilityID( "chaos_guo_puke" )
	end
	if (GUO.Spit_id == nil) then
		GUO.Spit_id = cpu_manager.stats:GetAbilityID( "chaos_guo_spit" )
	end
end

--Basic infantry tactics for Chaos squads. Includes all_run!
import ("Races/Chaos_Marine_Race/aaa_chaos_infantry_basetactic.ai")
--Basic infantry tactics, universal.
import ("Core/Tactics/infantryCoreAbilities.ai")
function GUOTactic:DoAbilities()

	Ability.DoAbilityPos( self.squad_ai, GUO.Puke_id, Ability.Filters.CloseEnemy, 6 )
	Ability.DoAbilityPos( self.squad_ai, GUO.Puke_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)
	Ability.DoAbilityPos( self.squad_ai, GUO.Spit_id, Ability.Filters.CloseEnemy, 8 )
	Ability.DoAbilityPos( self.squad_ai, GUO.Spit_id, Ability.EntityFilters.CloseBaseEntityEnemy, 3)

	--No references to overridden classes here!
	ChaosInfantryBaseTactic(self)
	DoCoreAbilities(self)
end

