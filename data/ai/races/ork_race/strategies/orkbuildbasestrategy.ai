				self:DynamicBuild("ork_waagh_banner_turret_sp", 4, 3, 800, 460, 0, 0)
				self:DynamicBuild("ork_mine_field", 4, 3, 400, 100, 0, 0)
				self:DynamicBuild("ork_tanktrap", 4, 3, 600, 600, 0, 0)
