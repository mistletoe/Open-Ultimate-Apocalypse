import("Player.scar");
import("GroupCallers.scar");
import("Command.scar");
import("Groups.scar");
import("ScarUtil.scar");
import("WXPGroups.scar");

-- Settings
g_fArmyCapModifier3 = 40


-- Init the cap modifier code
function Armycap_3_InitRule()

	print("Init Army Cap +40...")
	
	-- Create army cap modifiers
	local oModMaxSquadCap	= Modifier_Create(MAT_Player, "max_squad_cap_player_modifier", MUT_Addition, false, g_fArmyCapModifier3, "")
	local oModMaxSupportCap	= Modifier_Create(MAT_Player, "max_support_cap_player_modifier", MUT_Addition, false, g_fArmyCapModifier3, "")
	local oModSquadCap		= Modifier_Create(MAT_Player, "squad_cap_player_modifier", MUT_Addition, false, g_fArmyCapModifier3, "")
	local oModSupportCap	= Modifier_Create(MAT_Player, "support_cap_player_modifier", MUT_Addition, false, g_fArmyCapModifier3, "")
	
	-- Compute all players
	g_iPlayerCount = World_GetPlayerCount()
	for iLoop1 = 0, g_iPlayerCount - 1 do
	
		-- Get player ID
		local ePlayerID = World_GetPlayerAt(iLoop1)
		
		--[[if (Player_GetRaceName(ePlayerID) == "ork_race") then
			local oModPopulationCap	= Modifier_Create(MAT_Player, "population_cap_player_modifier", MUT_Multiplication, false, g_fArmyCapModifier3*2, "")
			Modifier_ApplyToPlayer( oModPopulationCap, ePlayerID)
		end]]
		
		-- Apply army cap modifiers
		pcall(Modifier_ApplyToPlayer, oModMaxSquadCap, ePlayerID)
		pcall(Modifier_ApplyToPlayer, oModMaxSupportCap, ePlayerID)
		pcall(Modifier_ApplyToPlayer, oModSquadCap, ePlayerID)
		pcall(Modifier_ApplyToPlayer, oModSupportCap, ePlayerID)
	end
	
	-- Destroy army cap modifiers
	Modifier_Destroy(oModMaxSquadCap)
	Modifier_Destroy(oModMaxSupportCap)
	Modifier_Destroy(oModSquadCap)
	Modifier_Destroy(oModSupportCap)
end

-- Init Massive Battles rule system
function Armycap_3_Setup()
	Rule_AddOneShot(Armycap_3_InitRule, 2.0)
end

-- Init SCAR
Scar_AddInit(Armycap_3_Setup)