		Rule_AddInterval(Rule_Chaos_BuildPostDoing, 0)
		
	elseif not Tut_SGBlueprintCheck("sg_Player1All", blueprint.builder, 1, true) then
	
		g_tutorialRuleState = Rule_Chaos_BuildPost
