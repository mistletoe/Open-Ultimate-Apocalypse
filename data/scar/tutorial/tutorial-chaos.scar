-- Space Marine Lesson 2 - Build Scout 

function Rule_Chaos_BuildScout()

	-- Define Objective
	obj_BuildScout = { title_id = 503100, short_desc_id = 503101, help_tip_id = 503100 }	-- Build a Scout Marine Squad

	-- Get ALL egroups and sgroups
	Tut_Player1GetAll()
	
	g_ReminderTime = 120

	-- Check to see if they don't have a scout marine already
